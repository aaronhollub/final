<% family = Update.find_by("id" => params["id"]) %>

<h2>Edit A Family Name></h2>

<%= form_tag "/families/#{family["id"]}", "method" => "patch" %>

  <div class="form-group">
    <label class="col-sm-2 control-label">Update</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="family_name" value="<%= family["family_name"] %>">
    </div>
  </div>

<%= submit_tag %> or <%= link_to "Cancel", "/admin" %>
