<% if cookies["account_type"] == "admin" then %>

<% gantt = Gantt.find_by("id" => params["id"]) %>
<% the_project = Project.find_by("id" => gantt["project_id"]) %>

<h2>Edit Gantt Chart For: <%= gantt["project_name"] %></h2>

<%= form_tag "/gantts/#{gantt["id"]}", "method" => "patch" %>

  <div class="form-group">
    <label class="col-sm-2 control-label">Gantt URL</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="url" value="<%= gantt["gantt_url"] %>">
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Client</label>
    <div class="col-sm-10">
      <%= select_tag "project_name", options_from_collection_for_select(Project.read.order("project_name"), "project_name", "project_name"), "class" => "form-control" %>
    </div>
  </div>

  <%= submit_tag %> or <%= link_to "Cancel", "/projects/#{the_project["id"]}"%>

</form>

<% else %>

  <h4 class="text-warning" align="center"><%= "You Are Not Authorized To View This Content!" %></h4>

<% end %>

