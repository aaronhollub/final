<% if cookies["account_type"] == "admin" then %>

<% photo = Photo.find_by("id" => params["id"]) %>

<h2>Edit Photo Information %></h2>

<%= form_tag "/photos/#{photo["id"]}", "method" => "patch" %>

  <div class="form-group">
    <label class="col-sm-2 control-label">URL</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="url" value="<%= photo["photo_url"] %>">
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Project Name</label>
    <div class="col-sm-10">
    <%= select_tag "project_name", options_from_collection_for_select(Project.read.order("project_name"), "project_name", "project_name"), "class" => "form-control" %>
    <!--       <input type="text" class="form-control" name="project_name" placeholder="Project Name"> -->
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Photo Caption</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="comment" value="<%= photo["caption"] %>">
    </div>
  </div>

  <%= submit_tag %> or <%= link_to "Cancel", "/projects" %>

</form>


<% else %>

  <h3><%= "You are not authorized to view this page. Please go back" %></h3>

<% end %>
