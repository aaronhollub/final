<% if cookies["account_type"] == "admin" then %>

<h2 class="project-header">Add New Project</h2>

<br>

<form class="form-horizontal" role="form" action="/projects" method="post">

  <div class="form-group">
    <label class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="name" placeholder="Project Name">
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Address</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="address" placeholder="Project Address">
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Summary</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="project_summary" placeholder="Project Summary">
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Family Name</label>
    <div class="col-sm-10">
      <%= select_tag "family_name", options_from_collection_for_select(Family.read.order("family_name"), "family_name", "family_name"), "class" => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-success"> Submit </button> or <a href="/admin">Cancel</a>
    </div>
  </div>

</form>

<% else %>

  <h4 class="text-warning" align="center"><%= "You Are Not Authorized To View This Content!" %></h4>

<% end %>
