<% the_project = Project.read(params["id"]) %>
<% the_family = Family.find_by("id" => the_project["family_id"]) %>

<h2 class="project-header">Edit Project - <%= the_project["project_name"] %></h2>

<BR>

<%= form_tag "/projects/#{the_project['id']}", "method" => "patch"  %>

<div class="form-group">
  <label class="col-sm-2 control-label">Name</label>
  <div class="col-sm-10">
    <input type="text" class="form-control" name="name" value="<%= the_project["project_name"] %>">
  </div>
</div>

<div class="form-group">
  <label class="col-sm-2 control-label">Address</label>
  <div class="col-sm-10">
    <input type="text" class="form-control" name="address" value="<%= the_project["project_address"] %>">
  </div>
</div>

<div class="form-group">
  <label class="col-sm-2 control-label">Summary</label>
  <div class="col-sm-10">
    <input type="text" class="form-control" name="project_summary" value="<%= the_project["summary"] %>">
  </div>
</div>

<div class="form-group">
  <label class="col-sm-2 control-label">Family Name</label>
  <div class="col-sm-10">
    <%= select_tag "family_name", options_from_collection_for_select(Family.read.order(""), "family_name", "family_name", the_family[:family_name]), "class" => "form-control" %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <button type="submit" class="btn btn-success"> Submit </button> or <a href="/projects/<%=the_project["id"]%>">Cancel</a>
  </div>
</div>

</form>
